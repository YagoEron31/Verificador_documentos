    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Adiciona event listeners para todos os links que levam a #
            const buttons = document.querySelectorAll('a[href="#"]');
            buttons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    alert('Esta funcionalidade será implementada no sistema completo!');
                });
            });
            
            // Melhoria de acessibilidade para o botão de detalhes
            document.querySelector('button').addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    alert('Detalhes do documento serão exibidos aqui');
                }
            });
            
            // Suaviza o scroll para âncoras
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    if (this.getAttribute('href') !== '#') {
                        e.preventDefault();
                        document.querySelector(this.getAttribute('href')).scrollIntoView({
                            behavior: 'smooth'
                        });
                    }
                });
            });
        });
    </script>
