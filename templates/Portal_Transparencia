    <script>
        // Funções para o modal de acesso
        function openAccessModal() {
            document.getElementById('accessModal').classList.remove('hidden');
        }
        
        function closeAccessModal() {
            document.getElementById('accessModal').classList.add('hidden');
        }
        
        // Fechar modal ao clicar fora
        document.getElementById('accessModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeAccessModal();
            }
        });
        
        // Formulário de solicitação
        document.getElementById('accessForm').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Solicitação enviada com sucesso! Você receberá um e-mail com as instruções.\nO prazo para análise é de até 5 dias úteis.');
            closeAccessModal();
            
            // Aqui você adicionaria a lógica para atualizar a lista de solicitações
        });
        
        // Máscaras para os campos
        document.getElementById('cpf').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 3) value = value.replace(/^(\d{3})(\d)/g, '$1.$2');
            if (value.length > 6) value = value.replace(/^(\d{3})\.(\d{3})(\d)/g, '$1.$2.$3');
            if (value.length > 9) value = value.replace(/^(\d{3})\.(\d{3})\.(\d{3})(\d)/g, '$1.$2.$3-$4');
            e.target.value = value.substring(0, 14);
        });
        
        document.getElementById('phone').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 0) value = '(' + value;
            if (value.length > 3) value = value.replace(/^(\d{2})(\d)/g, '$1) $2');
            if (value.length > 10) value = value.replace(/(\d{5})(\d)/, '$1-$2');
            e.target.value = value.substring(0, 15);
        });
        
        // Controle das abas de conteúdo
        document.getElementById('emendasBtn').addEventListener('click', function() {
            document.getElementById('emendasSection').classList.remove('hidden');
            document.getElementById('receitasSection').classList.add('hidden');
            document.getElementById('despesasSection').classList.add('hidden');
            
            document.getElementById('emendasBtn').classList.add('active');
            document.getElementById('receitasBtn').classList.remove('active');
            document.getElementById('despesasBtn').classList.remove('active');
        });
        
        document.getElementById('receitasBtn').addEventListener('click', function() {
            document.getElementById('emendasSection').classList.add('hidden');
            document.getElementById('receitasSection').classList.remove('hidden');
            document.getElementById('despesasSection').classList.add('hidden');
            
            document.getElementById('emendasBtn').classList.remove('active');
            document.getElementById('receitasBtn').classList.add('active');
            document.getElementById('despesasBtn').classList.remove('active');
        });
        
        document.getElementById('despesasBtn').addEventListener('click', function() {
            document.getElementById('emendasSection').classList.add('hidden');
            document.getElementById('receitasSection').classList.add('hidden');
            document.getElementById('despesasSection').classList.remove('hidden');
            
            document.getElementById('emendasBtn').classList.remove('active');
            document.getElementById('receitasBtn').classList.remove('active');
            document.getElementById('despesasBtn').classList.add('active');
        });
        
        // Suaviza o scroll para âncoras
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                if (this.getAttribute('href') !== '#') {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
</body>
</html>
