    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const btnCidadao = document.getElementById('btnCidadao');
            const btnServidor = document.getElementById('btnServidor');
            const servidorFields = document.getElementById('servidorFields');
            const loginForm = document.getElementById('loginForm');
            const loginButton = document.getElementById('loginButton');
            const loginText = document.getElementById('loginText');
            const loginSpinner = document.getElementById('loginSpinner');
            const loginMessage = document.getElementById('loginMessage');

            function toggleUserType(isServidor) {
                const primaryColor = '#1E8A57'; // Cor primária da prefeitura
                if (isServidor) {
                    btnServidor.style.backgroundColor = primaryColor;
                    btnServidor.style.borderColor = primaryColor;
                    btnServidor.classList.add('text-white');
                    btnServidor.classList.remove('hover:bg-gray-50');
                    
                    btnCidadao.style.backgroundColor = 'transparent';
                    btnCidadao.classList.remove('text-white');
                    btnCidadao.classList.add('hover:bg-gray-50');
                    
                    servidorFields.classList.remove('hidden');
                } else {
                    btnCidadao.style.backgroundColor = primaryColor;
                    btnCidadao.style.borderColor = primaryColor;
                    btnCidadao.classList.add('text-white');
                    btnCidadao.classList.remove('hover:bg-gray-50');

                    btnServidor.style.backgroundColor = 'transparent';
                    btnServidor.classList.remove('text-white');
                    btnServidor.classList.add('hover:bg-gray-50');

                    servidorFields.classList.add('hidden');
                }
            }
            
            // Inicializa o botão Cidadão como ativo
            toggleUserType(false);

            btnCidadao.addEventListener('click', () => toggleUserType(false));
            btnServidor.addEventListener('click', () => toggleUserType(true));

            loginForm.addEventListener('submit', (e) => {
                e.preventDefault();
                
                loginText.textContent = 'Acessando...';
                loginSpinner.classList.remove('hidden');
                loginButton.disabled = true;
                loginMessage.classList.add('hidden');

                // Simula uma chamada de API
                setTimeout(() => {
                    const email = document.getElementById('email').value;
                    
                    // Lógica de simulação de login
                    if (email === 'servidor@apodi.rn.gov.br') {
                        loginMessage.textContent = 'Login como servidor bem-sucedido! Redirecionando...';
                        loginMessage.className = 'mt-4 p-3 rounded text-sm bg-green-100 text-green-800';
                        // window.location.href = '/dashboard-servidor'; 
                    } else if (email.includes('@')) {
                        loginMessage.textContent = 'Login como cidadão bem-sucedido! Redirecionando...';
                        loginMessage.className = 'mt-4 p-3 rounded text-sm bg-green-100 text-green-800';
                        // window.location.href = '/dashboard-cidadao';
                    } else {
                        loginMessage.textContent = 'E-mail ou senha inválidos. Tente novamente.';
                        loginMessage.className = 'mt-4 p-3 rounded text-sm bg-red-100 text-red-800';
                    }
                    
                    loginMessage.classList.remove('hidden');
                    loginText.textContent = 'Acessar';
                    loginSpinner.classList.add('hidden');
                    loginButton.disabled = false;

                }, 1500);
            });
        });
    </script>
